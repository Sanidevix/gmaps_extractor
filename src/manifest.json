{
  "manifest_version": 3,
  "name": "GMaps Data Extractor",
  "version": "1.0",
  "description": "Busca establecimientos en Google Maps y extrae informaci√≥n relevante",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.google.com/maps/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/maps/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}